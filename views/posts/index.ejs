<%- include('../partials/header') %>
<h4>Today's date is <%= time %>, yell something!</h4>
<ul>
  <% posts.forEach(function(t) { %>
      <form action="/posts/<%= t.id %>?_method=DELETE" class="delete-form" method="POST">
        <a href="/posts/<%= t.id %>">
        <button type="submit">DELETE</button>
      </form>
        <%= t.post %>
      </a>
  <% }); %>
</ul>
<a href="/posts/new" id="mkpost">Make Post</a>

